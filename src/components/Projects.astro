---
import projects from './../data/projects.json'
import Box from './Box.astro'
// TODO create component tag and button and project item
---

<style lang="scss">
.projects{
    .box {
        display: flex;
        .stack {
            display: flex;
            justify-content: space-between;
            .tag {
                margin: 0px 2.5px;
                &:first-child {
                    margin-right: 2.5px;
                }
                &:last-child {
                    margin-left: 2.5px;
                }
            }
        }
    }

    h3 {
        font-weight: 400;
    }
    figure {
        width: 200px;
        img {
            height: auto;
            width: 200px;
            object-fit: cover;
        }
    }
    @media screen and (max-width: 1024px) {
        .box {
            flex-direction: column;
        }

        figure {
            margin: auto;
            width: 100%;
            img {
                width: 50%;
            }
        }
        
        .stack {
            flex-direction: column;
            div {
                margin-top: 5px;
                margin-bottom: 5px;
            }
        }
    }
}
</style>
<section class="section projects">
    <h1 class="title has-text-centered has-text-accent mb-3">Proyectos</h1>
    {projects.map(project => 
        <Box class="box mt-5">
            <figure class="has-text-centered p-3">
                <img src={project.imgUrl} class="project-logo" alt={`project-${project.name}`} />
            </figure>
            <div>
                <h3 class="is-size-3">
                    {project.name}
                </h3>
                <p class="content">
                    {project.summary}
                </p>
                <div class="stack mt-3 mb-3">
                    <div class=" has-text-centered">

                        {project.stack.map(stack =>
                            <span class="tag is-size-5 ">
                                <i class={`devicon-${stack} colored`}></i>
                            </span>
                        )}
                    </div>
                    <div class="has-text-centered">
                        <a href={project.source} target="_blank" rel="noopener noreferrer" class="button is-dark mr-1">
                            <span class="icon">
                                <i class="devicon-github-original"></i>
                            </span>
                            <span>Codigo fuente</span>
                        </a>
                        <a href={project.demo} target="_blank" rel="noopener noreferrer" class="button is-accent ml-1">
                            <span class="icon">
                                <i class="devicon-devicon-plain colored"></i>
                            </span>
                            <span>Demo</span>
                        </a>
                    </div>
                </div>
            </div>
        </Box>
    )}
</section>
