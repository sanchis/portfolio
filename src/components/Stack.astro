---
import stack from "../data/stack.json";
import Box from "./ui/Box.astro";
import Button from "./ui/Button.astro";
---

<section class="section">
  <h1 class="text-center text-accent text-4xl mb-3 mt-20">Stack Tecnol√≥gico</h1>

  <div class="flex flex-wrap gap-1">
    {
      stack.map((stck) => (
        <Button
          class="text-4xl px-0"
          variant="ghost"
          href={stck.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={stck.name}
        >
          <Box>
            <i class={`devicon-${stck.name} colored`} />
          </Box>
        </Button>
      ))
    }
  </div>
</section>
