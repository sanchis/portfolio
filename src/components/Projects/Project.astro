---
import Box from "./../ui/Box.astro";
import Button from "./../ui/Button.astro";
import Tag from "./../ui/Tag.astro";
const { project } = Astro.props;
---

<Box class="flex flex-col p-5 md:flex-row">
  <figure class="flex items-center justify-center p-3">
    <img
      src={project.imgUrl}
      class="h-[100px] w-[200px] max-w-none object-contain"
      alt={`project-${project.name}`}
    />
  </figure>
  <div class="w-full">
    <h3 class="text-3xl font-light">
      {project.name}
    </h3>
    <p>
      {project.summary}
    </p>
    <div class="flex flex-col justify-between mt-3 mb-3 md:flex-row">
      <div class="flex gap-2">
        {
          project.stack.map((stack: string) => (
            <Tag class="is-size-6">
              <i class={`devicon-${stack} colored`} />
            </Tag>
          ))
        }
      </div>
      <div class="flex flex-col gap-1 md:flex-row">
        <Button href={project.source} target="_blank" variant="dark">
          <i class="mr-1 devicon-github-original"></i>
          <span>CÃ³digo fuente</span>
        </Button>
        <Button href={project.demo} target="_blank" variant="accent">
          <i class="mr-1 icon devicon-devicon-plain colored"></i>
          <span>Demo</span>
        </Button>
      </div>
    </div>
  </div>
</Box>
