<style>
  .stack-tech {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(90px, 1fr));
    justify-content: center;
    align-items: center;
    align-content: center;
    grid-gap: 1rem;
  }


  }
</style>
<h1 class="title has-text-centered has-text-weight-light mb-3">
  <%- page.hello %>
    <strong class="has-text-weight-bold has-text-accent">
      <%- config.author %>
    </strong>
</h1>
<p class="is-italic has-text-centered">
  <%- page.me %>
</p>
<div class="buttons-intro mt-4 is-size-4">
  <a href="https://www.linkedin.com/in/<%- theme.linkedinProfile %>" aria-label="linkedin" target="_blank"
    rel="noopener noreferrer" class="box has-text-centered mr-2 ml-2 mb-0 mt-0">
    <i class="devicon-linkedin-plain colored"></i>
  </a>
  <a href="https://github.com/<%- theme.githubProfile %>" target="_blank" rel="noopener noreferrer" aria-label="github"
    class="box has-text-centered mr-2 ml-2 mb-0 mt-0">
    <i class="devicon-github-original colored"></i>
  </a>
</div>


<section class="section projects">
  <h1 class="title has-text-centered has-text-accent mb-3">Proyectos</h1>
  <% eval(page.projects).forEach((project)=> { %>
    <div class="box">
      <figure class="has-text-centered p-3">
        <img src="<%- project.imgUrl %>" class="project-logo" alt="project-<%- project.name %>" />
      </figure>
      <div>
        <h3 class="is-size-3">
          <%- project.name %>
        </h3>
        <p class="content">
          <%- project.summary %>
        </p>
        <div class="stack mt-3 mb-3">
          <div class=" has-text-centered">

            <% project.stack.forEach((stack)=> { %>

              <span class="tag is-size-5 ">
                <i class="devicon-<%- stack %> colored"></i>
              </span>
              <% }) %>
          </div>
          <div class="has-text-centered">
            <a href="<%- project.source %>" target="_blank" rel="noopener noreferrer" class="button is-dark mr-1">
              <span class="icon">
                <i class="devicon-github-original"></i>
              </span>
              <span>Codigo fuente</span>
            </a>
            <a href="<%- project.demo %>" target="_blank" rel="noopener noreferrer" class="button is-accent ml-1">
              <span class="icon">
                <i class="devicon-devicon-plain colored"></i>
              </span>
              <span>Demo</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
</section>

<section class="section">
  <h1 class="title has-text-centered has-text-accent mb-3">Stack Tecnol√≥gico</h1>

  <div class="stack-tech is-size-2">
    <% eval(page.stack).forEach((stack)=> { %>
      <a class="box has-text-centered" href="<%- stack.url %>" target="_blank" rel="noopener noreferrer"
        aria-label="<%- stack.name %>">
        <i class="devicon-<%-stack.name %> colored"></i>
      </a>
      <% }) %>
  </div>
</section>